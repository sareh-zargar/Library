<UserControl x:Class="Library.UserControlLibrary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="300" >
    
    <Grid >
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" 
                Grid.RowSpan="8" 
                Grid.Column="0" 
                Grid.ColumnSpan="3" 
                Style="{DynamicResource BorderStyle1}"/>
        
        <Label Content="Library Information" 
               Grid.Column="0" 
               Grid.ColumnSpan="2" 
               Grid.Row="0" 
               Style="{DynamicResource LabelStyle1}" />
        
        <TextBlock Text="Name"       
                   Grid.Row="1" 
                   Grid.Column="0" 
                   Style="{DynamicResource TextBlockStyle1}"/>
        
        <TextBlock Text="Address"    
                   Grid.Row="2" 
                   Grid.Column="0" 
                   Style="{DynamicResource TextBlockStyle1}"/>
        
        <TextBlock Text="Tell" 
                   Grid.Row="3" 
                   Grid.Column="0" 
                   Style="{DynamicResource TextBlockStyle1}"/>
        
        <TextBlock Text="WebSite"   
                   Grid.Row="4" 
                   Grid.Column="0" 
                   Style="{DynamicResource TextBlockStyle1}"/>
        
        <TextBlock Text="Type" 
                   Grid.Column="0" 
                   Grid.Row="5" 
                   Style="{DynamicResource TextBlockStyle1}"/>
        
        <TextBox  Grid.Column="1" 
                  Grid.Row="1" 
                  Style="{DynamicResource TextBoxStyle1}"/>
        
        <TextBox Grid.Column="1" 
                 Grid.Row="2" 
                 Style="{DynamicResource TextBoxStyle1}"  />
        
        <TextBox Grid.Column="1" 
                 Grid.Row="3" 
                 Style="{DynamicResource TextBoxStyle1}"/>
        
        <TextBox Grid.Column="1" 
                 Grid.Row="4" 
                 Style="{DynamicResource TextBoxStyle1}"/>
        
        <CheckBox Content="Public" 
                  Grid.Column="1" 
                  Grid.Row="5" 
                  Style="{DynamicResource CheckBoxStyle1}"/>
        
        <Grid Grid.Row="7" 
              Grid.Column="0" 
              Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="save" 
                    Grid.Column="0" 
                    Style="{DynamicResource ButtonStyle1}"/>
            
            <Button Content="Cancel" 
                    Grid.Column="1" 
                    Style="{DynamicResource ButtonStyle1}"/>
        </Grid>
    </Grid>
</UserControl>

