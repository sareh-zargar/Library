<Window x:Name="Load" x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="MainWindow" Style="{DynamicResource StyleManinWindow}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:UserControlLibrary Grid.Column="0" 
                                  Grid.Row="1" 
                                  Margin="5,0,7,5"/>
        
        <local:UserControlShelf Grid.Column="1" 
                                Grid.Row="1" 
                                Margin="7,0,7,5"/>
        
        <local:UserControlBook Grid.Column="2" 
                               Grid.Row="1" 
                               Margin="7,0,5,5"/>
    </Grid>
</Window>
