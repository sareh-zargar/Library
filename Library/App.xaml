<Application x:Class="Library.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Library"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleMainWindow.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleColor.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleCaptionButton.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleButton.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleComboBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleSlider.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleTextBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleTextBlock.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleUserControlBorder.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleLabel.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme;component/StyleCheckBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
