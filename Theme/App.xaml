<Application x:Class="Theme.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Theme"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StyleComboBox.xaml"/>
                <ResourceDictionary Source="StyleColor.xaml"/>
                <ResourceDictionary Source="StyleSlider.xaml"/>
                <ResourceDictionary Source="StyleTextBox.xaml"/>
                <ResourceDictionary Source="StyleTextBlock.xaml"/>
                <ResourceDictionary Source="StyleUserControlBorder.xaml"/>
                <ResourceDictionary Source="StyleLabel.xaml"/>
                <ResourceDictionary Source="StyleCheckBox.xaml"/>
                <ResourceDictionary Source="StyleButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
